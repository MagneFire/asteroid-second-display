<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node>
  <interface name="org.asteroid.display">
    <property name="stepCounter" type="b" access="readwrite"/>
    <signal name="StepCounterChanged">
    </signal>
    <method name="HasSecondDisplay">
      <arg type="b" direction="out"/>
    </method>
    <method name="SynchronizeTime">
      <arg type="i" direction="out"/>
    </method>
    <method name="HasTimepieceMode">
      <arg type="b" direction="out"/>
    </method>
    <method name="EnterTimepieceMode">
      <arg type="i" direction="out"/>
    </method>
    <method name="HasStepCounter">
      <arg type="b" direction="out"/>
    </method>
    <method name="SetStepCounter">
      <arg type="i" direction="out"/>
      <arg name="enable" type="b" direction="in"/>
    </method>
    <method name="GetStepCounter">
      <arg type="b" direction="out"/>
    </method>
    <method name="HasHands">
      <arg type="i" direction="out"/>
    </method>
  </interface>
</node>
